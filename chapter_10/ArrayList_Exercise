import java.util.ArrayList;

public class ArrayList_Exercise {

  public static void main(String[] args) {
    List<String> list = new ArrayList<String>();

    // array list size 5, type <String>
    list.add("It");
    list.add("was");
    list.add("a");
    list.add("stormy");
    list.add("night");

    System.out.println()
    // inserting two elements into Arraylist
    // into specfic indices
    list.add("dark", 3);
    list.add("and", 5);  // after inserting "dark", indices shift

    // changing "is" to "IS"
    list.set("IS", "was");
  }
}